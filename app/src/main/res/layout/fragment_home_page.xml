<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@color/colorForgive">

        <View
            android:id="@+id/line5"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:orientation="horizontal"></View>
        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/line5"
            android:layout_centerVertical="true"
            android:maxWidth="120dp"
            android:text="123"
            android:textColor="#f8f8f8"
            android:textSize="35dp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_moment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_moment_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_moment" />

        <TextView
            android:id="@+id/home_moment_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="@color/lightGray"
            android:layout_toRightOf="@+id/home_moment_iconId"
            android:text="朋友圈"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_moment_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:background="@drawable/red_circle_shape"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:padding="4dp"
            android:textColor="@color/white"
            android:text="12" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_friend"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_friend_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_friend" />

        <TextView
            android:id="@+id/home_friend_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_friend_iconId"
            android:text="通讯录"
            android:textColor="@color/lightGray"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_friend_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_information"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_information_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_information" />

        <Button
            android:background="#00000000"
            android:id="@+id/home_information_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_information_iconId"
            android:text="我的资料"
            android:textColor="@color/lightGray"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_information_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_favorite"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_favorite_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@mipmap/icon_favorite" />

        <TextView
            android:id="@+id/home_favorite_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_favorite_iconId"
            android:text="收藏"
            android:textColor="@color/lightGray"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_favorite_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/home_other"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp">

        <ImageView
            android:id="@+id/home_other_iconId"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="9dp"
            android:src="@mipmap/icon_other" />

        <TextView
            android:id="@+id/home_other_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/home_other_iconId"
            android:text="其他"
            android:textColor="@color/lightGray"
            android:textSize="18dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_alignLeft="@+id/home_other_textId"
            android:layout_alignParentBottom="true"
            android:background="#D9D9D9" />

    </RelativeLayout>

</LinearLayout>
