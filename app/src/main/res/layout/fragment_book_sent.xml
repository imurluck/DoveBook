<android.support.design.widget.CoordinatorLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/book_sent_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dovebook.book.BookSent_fragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/book_sent_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <include
        layout="@layout/recycler_empty"
        android:visibility="gone" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/bt_book_add"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="40dp"
        android:layout_marginEnd="35dp"
        android:padding="4dp"
        android:backgroundTint="@color/white"
        app:backgroundTintMode="src_in"
        app:borderWidth="0dp"
        app:elevation="5dp"
        app:fabSize="auto"
        app:pressedTranslationZ="20dp"
        app:rippleColor="#f00"
        app:useCompatPadding="true"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="com.example.dovebook.widget.behavior.ScrollAwareFABBehavior"
        android:src="@drawable/plus"/>


</android.support.design.widget.CoordinatorLayout>
